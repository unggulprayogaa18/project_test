    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const materiModal = new bootstrap.Modal(document.getElementById('materiModal'));
        const materiForm = document.getElementById('materiForm');
        const modalLabel = document.getElementById('materiModalLabel');
        const formMethod = document.getElementById('formMethod');
        const currentFilePathInput = document.getElementById('currentFilePath');

        const judulInput = document.getElementById('judul');
        const deskripsiInput = document.getElementById('deskripsi');
        const kelasIdSelect = document.getElementById('kelas_id');
        const userIdSelect = document.getElementById('user_id');
        const tipeMateriSelect = document.getElementById('tipe_materi');
        const fileUploadSection = document.getElementById('fileUploadSection');
        const linkUrlSection = document.getElementById('linkUrlSection');
        const fileUploadInput = document.getElementById('file_upload');
        const linkUrlInput = document.getElementById('link_url');
        const currentFileDisplay = document.getElementById('currentFileDisplay');


        // Function to toggle file/link input visibility
        function toggleFileInputs() {
            fileUploadSection.style.display = 'none';
            linkUrlSection.style.display = 'none';
            fileUploadInput.removeAttribute('required');
            linkUrlInput.removeAttribute('required');

            const selectedType = tipeMateriSelect.value;
            if (selectedType === 'dokumen' || selectedType === 'video') {
                fileUploadSection.style.display = 'block';
                // fileUploadInput.setAttribute('required', 'required'); // Optional: make file required for these types
            } else if (selectedType === 'link') {
                linkUrlSection.style.display = 'block';
                linkUrlInput.setAttribute('required', 'required');
            }
        }

        // Listen for changes on tipe_materi select
        tipeMateriSelect.addEventListener('change', toggleFileInputs);

        function editMateri(materi) {
            // Mengatur action form untuk update dan method spoofing
            materiForm.action = `/admin/materis/${materi.id}`;
            formMethod.value = 'PUT';

            // Mengisi field di form dengan data materi yang dipilih
            judulInput.value = materi.judul;
            deskripsiInput.value = materi.deskripsi;
            kelasIdSelect.value = materi.kelas_id;
            userIdSelect.value = materi.user_id;
            tipeMateriSelect.value = materi.tipe_materi;

            // Handle file/link display for editing
            currentFilePathInput.value = materi.file_path; // Store current file path
            currentFileDisplay.innerHTML = ''; // Clear previous display

            if (materi.file_path) {
                if (materi.tipe_materi === 'link') {
                    linkUrlInput.value = materi.file_path;
                } else {
                    // Display existing file name/path
                    const fileName = materi.file_path.split('/').pop(); // Get just the filename
                    currentFileDisplay.innerHTML = `<p class="mb-0 text-muted">File saat ini: <a href="{{ Storage::url('') }}/${materi.file_path}" target="_blank">${fileName}</a></p>`;
                }
            } else {
                linkUrlInput.value = '';
            }

            toggleFileInputs(); // Call to adjust visibility based on loaded type

            // Mengubah judul modal
            modalLabel.textContent = 'Edit Materi Pelajaran';

            // Menampilkan modal
            materiModal.show();
        }

        // Event listener untuk mereset form setiap kali modal ditutup
        document.getElementById('materiModal').addEventListener('hidden.bs.modal', function () {
            materiForm.reset();
            materiForm.action = "{{ route('admin.materis.store') }}";
            formMethod.value = 'POST';
            modalLabel.textContent = 'Tambah Materi Pelajaran';
            currentFilePathInput.value = ''; // Clear current file path
            currentFileDisplay.innerHTML = ''; // Clear file display
            fileUploadInput.value = ''; // Clear file input value
            toggleFileInputs(); // Reset visibility
        });

        // Initialize on page load in case of validation errors on refresh
        document.addEventListener('DOMContentLoaded', () => {
            // If validation errors are present on page load (e.g., after failed store/update)
            @if ($errors->any() && old('tipe_materi'))
                tipeMateriSelect.value = "{{ old('tipe_materi') }}";
                toggleFileInputs();
                // Repopulate link_url if it was old
                @if(old('tipe_materi') === 'link' && old('link_url'))
                    linkUrlInput.value = "{{ old('link_url') }}";
                @endif
            @else
                toggleFileInputs(); // Call on initial load for new form
            @endif
        });
    </script>
</body>

</html>