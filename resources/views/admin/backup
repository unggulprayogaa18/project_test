                                        <th>File/Link</th>
                                        <th class="text-center">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @forelse ($materis as $key => $materi)
                                        <tr>
                                            <td>{{ $materis->firstItem() + $key }}</td>
                                            <td>{{ $materi->judul }}</td>
                                            <td>{{ $materi->kelas->nama_kelas ?? 'N/A' }}</td>
                                            <td>{{ $materi->user->nama ?? 'N/A' }}</td>
                                            <td>{{ ucfirst($materi->tipe_materi) }}</td>
                                            <td>
                                                @if ($materi->file_path)
                                                    @if ($materi->tipe_materi == 'link')
                                                        <a href="{{ $materi->file_path }}" target="_blank"
                                                            class="btn btn-sm btn-info"><i
                                                                class="bi bi-box-arrow-up-right me-1"></i>Buka Link</a>
                                                    @else
                                                        <a href="{{ Storage::url($materi->file_path) }}" target="_blank"
                                                            class="btn btn-sm btn-info"><i
                                                                class="bi bi-file-earmark-arrow-down me-1"></i>Lihat File</a>
                                                    @endif
                                                @else
                                                    -
                                                @endif
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm btn-warning"
                                                    onclick="editMateri({{ json_encode($materi) }})">
